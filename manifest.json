{
  "manifest_version": 3,
  "name": "Resume ATS Tracker",
  "version": "1.0.0",
  "description": "Calculate real-time ATS compatibility scores for resumes/CVs with explainable scoring",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "type": "module",
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Resume ATS Tracker",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  
  "options_page": "src/options/index.html",
  
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "src/scoring/worker/*.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "commands": {
    "toggle-drawer": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Toggle Resume ATS Tracker drawer"
    }
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; worker-src 'self'"
  }
}
